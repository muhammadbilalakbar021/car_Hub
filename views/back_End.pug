       <div id="GetData">
         <h1>Get Data</h1>
         <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">car_Company</th>
              <th scope="col">car_Name</th>
              <th scope="col">car_Price</th>
              <th scope="col">model</th>
              <th scope="col">generation</th>
              <th scope="col">pros</th>
              <th scope="col">cons</th>
              <th scope="col">overview</th>
              <th scope="col">horsepower</th>
              <th scope="col">torque</th>
              <th scope="col">topspeed</th>
              <th scope="col">zeroto60</th>
            </tr>
          </thead>
          <tbody>
            -var n = 1;
            each item in items
              <tr>
                <th scope="row">#{n++}</th>
                  td=item.car_Company
                  td=item.car_Name
                  td=item.car_Price
                  td=item.model
                  td=item.generation
                  td=item.pros
                  td=item.cons
                  td=item.overview
                  td=item.horsepower
                  td=item.torque
                  td=item.topspeed
                  td=item.zeroto60
            </tr>
          </tbody>
          </table>
       </div>

           